{
  "version": 2,
  "builds": [
    {
      "src": "website/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    { "source": "/manifesto", "destination": "/website/manifesto.html" },
    { "source": "/spec", "destination": "/website/spec.html" },
    { "source": "/openapi.yaml", "destination": "/website/openapi.yaml" },
    { "source": "/(.*)", "destination": "/website/$1" }
  ],
  "headers": [
    {
      "source": "/openapi.yaml",
      "headers": [{ "key": "Content-Type", "value": "application/x-yaml; charset=utf-8" }]
    },
    {
      "source": "/favicon.ico",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
    },
    {
      "source": "/(favicon-32x32.png|apple-touch-icon.png|og.png)",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=604800" }]
    }
  ]
}
