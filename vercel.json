{
  "version": 2,
  "builds": [{ "src": "website/**", "use": "@vercel/static" }],

  "routes": [
    { "src": "^/$", "dest": "website/index.html" },
    { "src": "^/manifesto/?$", "dest": "website/manifesto.html" },
    { "src": "^/spec\\.html$", "dest": "website/spec.html" },
    { "src": "^/openapi\\.yaml$", "dest": "website/openapi.yaml" },

    { "handle": "filesystem" },

    { "src": "^/404/?$", "dest": "website/404.html", "status": 404 },
    { "src": "/(.*)", "dest": "website/404.html", "status": 404 }
  ],

  "headers": [
    {
      "source": "/openapi.yaml",
      "headers": [{ "key": "Content-Type", "value": "application/x-yaml; charset=utf-8" }]
    },
    {
      "source": "/favicon.ico",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
    },
    {
      "source": "/(favicon-32x32.png|apple-touch-icon.png|og.png)",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=604800" }]
    }
  ]
}
